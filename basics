 SELECT GOODS_ID 
  FROM GOODS;
  
 SELECT GOODS_ID, GOODS_NAME
  FROM GOODS;
  
 SELECT * 
  FROM GOODS;
  
 SELECT DISTINCT GOODS_CLASSIFY
   FROM GOODS;
   
 SELECT DISTINCT BUY_PRICE
   FROM GOODS;
   
 SELECT DISTINCT GOODS_CLASSIFY BUY_PRICE
   FROM GOODS;

 SELECT GOODS_NAME, GOODS_CLASSIFY
    FROM GOODS
  WHERE GOODS_CLASSIFY='CLOTHES';
  
 SELECT GOODS_ID, AS ID, GOODS_NAME AS NAME, BUY_PRICE AS PRICE
    FROM GOODS;
