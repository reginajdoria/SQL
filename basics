CREATE DATABASE SHOP;
 USE SHOP;
  
CREATE TABLE GOODS
  (GOODS_GOODS_ID CHAR(4) NOT NULL,
    GOODS_NAME VARCHAR(100) NOT NULL,
    GOODS_CLASSIFY VARCHAR(32) NOT NULL,
    SELL_PRICE INTEGER,
    BUY_PRICE INTEGER,
    REGISTER_DATE DATE,
  PRIMARY KEY (GOODS_ID));
  
 SELECT * FROM GOODS

